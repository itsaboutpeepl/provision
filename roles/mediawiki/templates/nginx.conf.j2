server {
    listen 443 ssl;
    root {{ mediawiki_path }};
    index index.php index.html index.htm;
    server_name {{ production_domain }} ;

    location / {
        index index.php;
        error_page 404 = @mediawiki;
    }

    location ~* \.(css|gif|ico|jpeg|jpg|js|png|svg)$ {
        try_files $uri /index.php;
        expires max;
        log_not_found off;
    }

    location @mediawiki {
        rewrite ^/wiki([^?]*)(?:\?(.*))? /index.php?title=$1&$2 last;
    }

    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_intercept_errors on;
        fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }

    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    location = /robots.txt {
        log_not_found off;
        access_log off;
        allow all;
    }

    location ~ /\. {
        access_log off;
        log_not_found off;
        deny all;
    }

    ssl_certificate /etc/letsencrypt/live/{{ production_domain }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ production_domain }}/privkey.pem; # managed by Certbot
}

server {
    if ($host = {{ production_domain }}) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name {{ production_domain }} ;
    return 404; # managed by Certbot
}
